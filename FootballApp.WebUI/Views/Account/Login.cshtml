@using FootballApp.WebUI.Models
@model LoginViewModel
@{
    Layout = "";
    ViewBag.Title = "Log in";
}

<html>
<head>
    <title>Login</title>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="~/Content/Css/Login/login.css">
</head>
<body>
    <div class="wrap-out">
        <div class="wrap-in">
            <div class="login">
                <div class="login-form">
                    <div class="login-msg">
                        <h1>Welcome!</h1>
                        <p>Please enter credentials to login.</p>

                    </div>
                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary(true, "", new { @class = "text-error" })

                        <div class="login-field">
                            <div class="login-label">
                                @Html.LabelFor(m => m.Email)
                            </div>

                            <div class="login-input">

                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-error" })
                            </div>
                        </div>
                        <div class="login-field">
                            <div class="login-label">
                                @Html.LabelFor(m => m.Password)
                            </div>

                            <div class="login-input">

                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-error" })
                            </div>
                        </div>


                        @Html.CheckBoxFor(m => m.RememberMe)
                        @Html.LabelFor(m => m.RememberMe)

                        <div class="login-button-wrap">
                            <input class="login-button" type="submit" value="Log-in">
                        </div>

                    }
                    <div class="register-msg">
                    <p>
                        @Html.ActionLink("Register as a new user", "Register")
                    </p>  
                    </div>
                   
                </div>

                <div class="login-brand">
                    <img class="logo" src="~/Content/Images/logo.png">
                </div>
            </div>
        </div>
    </div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
</body>

</html>