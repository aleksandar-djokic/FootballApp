@model FootballApp.WebUI.Models.CreateTournamentViewModel

@{
    ViewBag.Title = "Create";
}


@using (Html.BeginForm("Create","Tournament",FormMethod.Post, new { id="create-form" }))
{
    @Html.AntiForgeryToken()
    <div class="form-wrap">
        <h1>CREATE NEW TOURNAMENT</h1>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-field">
            <div class="form-label">
                Tournament name
            </div>
            <div class="form-input">
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-error" })
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-field">
            <div class="form-label">
                Number of participants
            </div>
            <div class="form-select">
                <input type="hidden" name="NumberOfParticipants" id="NumberOfParticipants" value="4" />
                <select id="participants-select">
                    <option>4</option>
                    <option>8</option>
                    <option>16</option>
                </select>
                @Html.ValidationMessageFor(model => model.NumberOfParticipants, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="button-field">
            <input class="create-button" type="submit" value="Create" name="Create">
        </div>
    </div>
}
@Scripts.Render("~/Scripts/Tournaments/createTournament.js")
@Styles.Render("~/Content/Css/Tournament/CreateTournament.css")
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
