@model FootballApp.WebUI.Models.IndexViewModel
@{
    ViewBag.Title = "Manage";
}


<div class="manage-wrap">
    <div class="profile">
        <div class="profile-image">
            @if (Model.ImageSource != "")
            {
                <img src="@Model.ImageSource" />
            }
            else
            {
                <img src="~/Content/Images/emptypfp.png" />

            }
        </div>
        <div class="profile-data">
            <label>Ime</label>
            <p>@Model.UserName</p>
            <label>Email</label>
            <p>@Model.Email</p>
        </div>
        <div class="profile-manage">

            <h4>Promeni podešavanja naloga</h4>
            <p>Šifra:</p>
                [
                @if (Model.HasPassword)
                {
                    @Html.ActionLink("Promeni šifru ", "ChangePassword")
                }
                else
                {
                    @Html.ActionLink("Create", "SetPassword")
                }
                ]
            <p>Profilna slika:</p>
            @Html.ActionLink("Promeni svoju profilnu sliku", "ChangeProfilePicture")
        </div>
    </div>
