@model FootballApp.WebUI.Models.TicketViewModel
@{
    ViewBag.Title = "Pregled tiketa";
}
<div class="header">

    <h2>Tiket: <span id="ticket-id"> @Model.Id</span> </h2>
    <h2>Naslov:@Model.Title</h2>
    <h3>Tema:@Model.Topic</h3>
    <h3>
        Pošiljalac: @Model.UserSender Vreme:@Model.Time.ToString() Status:@if (Model.isOpened)
        {<span>Otvoren</span>}
        else
        { <span>Zatvoren</span>}
    </h3>
    <a href="/Support" style="text-decoration:none;color:white;display:block;">< Nazad</a>
    @if (Model.isOpened)
    {
        <button class="close-ticket-button" id="close-button">Zatvori tiket</button>
    }
</div>
<div class="messages">

    @foreach (var m in Model.messages)
    {
        if (m.UserName == "Administrator")
        {
            <div class="message-admin">
                <p>@m.UserName</p>
                <p>@m.Time</p>
                <p>@m.Message</p>
            </div>
        }
        else
        {
            <div class="message">
                <p>@m.UserName</p>
                <p>@m.Time</p>
                <p>@m.Message</p>
            </div>
        }
    }
</div>
@if (Model.isOpened)
{
    <div class="message-input">
        <input id="message" type="text" />
        <button id="send-button">Pošalji</button>
    </div>

}
@Styles.Render("~/Content/Css/Support/Ticket.css")
@Scripts.Render("~/Scripts/Support/Ticket.js")