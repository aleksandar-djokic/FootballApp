@model IEnumerable<FootballApp.WebUI.Models.TicketAdminViewModel>
    @{
        ViewBag.Title = "AdminIndex";
    }
    <div class="header">

        <h1>Support Tickets</h1>
        
    </div>
    @if (Model.Count() > 0)
    {
        <div class="ticket-list">
            @foreach (var item in Model)
            {

                <a class="ticket-item" href="/Support/ViewTicket/@item.Id">
                    <div class="ticket-id">
                        @Html.DisplayFor(modelItem => item.Id)
                    </div>
                    <div class="ticket-user">
                        @Html.DisplayFor(modelItem => item.User)
                    </div>
                    <div class="ticket-title">
                        @Html.DisplayFor(modelItem => item.Title)
                    </div>
                    <div class="ticket-status">
                        @if (item.Status)
                        {<div>
                                Opened
                            </div>
                            <div class="ticket-opened"></div>
                        }
                        else
                        {
                            <div>
                                Closed
                            </div>
                            <div class="ticket-closed"></div>
                        }
                    </div>
                </a>
            }
        </div>
    }
    else
    {
        <h2 style="margin-top:5rem;color:white;">It seems there are currently no opened tickets. </h2>
    }

    @Styles.Render("~/Content/Css/Support/UserIndex.css")
